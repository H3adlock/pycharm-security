<idea-plugin>
    <id>org.tonybaloney.bandit.pycharm-bandit</id>
    <name>Bandit</name>
    <vendor email="anthonyshaw@apache.org" url="http://tonybaloney.github.io">Anthony Shaw</vendor>

    <description><![CDATA[
    Runs Bandit in your Python editor. Bandit is a tool designed to find common security issues in Python code.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <externalAnnotator language="PYTHON" id="pycharm-bandit" implementationClass="bandit.BanditExternalAnnotator" />
        <projectService serviceImplementation="bandit.ProjectService" />
        <projectConfigurable groupId="tools" instance="bandit.BanditConfigurationPanel"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>